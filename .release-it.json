{
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v${version}",
      "tagName": "v${version}",
      "requireCleanWorkingDir": false
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "hooks": {
      "before:init": ["git pull","npm run lint", "npm run test","npm run build"],
      "after:bump": "npx auto-changelog -p"
    }
    
  }